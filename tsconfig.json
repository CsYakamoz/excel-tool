{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "rootDir": "src",
        "lib": ["ES6"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "src/__tests__"]
}
